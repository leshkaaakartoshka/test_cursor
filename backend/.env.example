# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Telegram Bot Configuration
TG_BOT_TOKEN=your_telegram_bot_token_here
TG_MANAGER_CHAT_ID=your_manager_chat_id_here

# Lookup Configuration
LOOKUP_SOURCE=sheets  # or 'postgres'
LOOKUP_POLICY=strict  # or 'fallback'

# Google Sheets Configuration (if LOOKUP_SOURCE=sheets)
SHEETS_ID=your_google_sheets_id_here
SHEETS_TAB=QuoteCatalog

# Postgres Configuration (if LOOKUP_SOURCE=postgres)
DB_DSN=postgresql://user:password@localhost:5432/cpq_db

# PDF Storage Configuration
PDF_STORAGE=local  # or 's3'

# S3 Configuration (if PDF_STORAGE=s3)
S3_ENDPOINT=https://storage.yandexcloud.net
S3_BUCKET=cpq-pdfs
S3_KEY=your_s3_access_key
S3_SECRET=your_s3_secret_key

# Application Configuration
BASE_URL=http://localhost:8000
HASH_SALT=your_random_salt_for_price_hash

# Logging
LOG_LEVEL=INFO